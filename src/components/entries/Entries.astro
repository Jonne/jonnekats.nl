---
import EntriesOne from "./EntriesOne.astro";

import type { CollectionEntry } from 'astro:content';
interface Props {
    posts: CollectionEntry<'posts'>[];
    showTags?: boolean;
}
const { posts, showTags } = Astro.props;
---
<ul class="flex flex-col">
    {
        posts.map((post) => (
                <EntriesOne
                    url={post.data.external ? post.data.url : "/posts/" + post.slug}
                    external={post.data.external}
                    title={post.data.title}
                    description={post.data.description}
                    alt={post.data.title}
                    date={post.data.date}
                    author={post.data.author}
                    image={post.data.image}
                    tags={post.data.tags}
                    showTags={showTags}
                />
            ))
    }
</ul>