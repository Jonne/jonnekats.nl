    <div class="basis-1/2">
      <Image src={logo} loading="eager" alt="Guy programming in front of a dutch landscape."
             widths={[240, 540, 720, logo.width]}
             sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${logo.width}px`}
      />
    </div>
    <div class="lg:text-center basis-1/2">
